#!/usr/bin/env bash
# Session start hook - 直接输出预生成的 JSON
# context.json 由 CI 自动生成，或在 SKILL.md 更新时手动运行：
# jq -Rs '{"additional_context": ., "hookSpecificOutput": {"additionalContext": .}}' \
#   skills/coding-fangirl/SKILL.md > skills/coding-fangirl/context.json

SCRIPT_DIR="$(cd "$(dirname "$0")" && pwd)"
PLUGIN_ROOT="$(dirname "$SCRIPT_DIR")"
JSON_FILE="$PLUGIN_ROOT/skills/coding-fangirl/context.json"

if [ -f "$JSON_FILE" ]; then
    cat "$JSON_FILE"
fi
